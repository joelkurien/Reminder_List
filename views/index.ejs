  <%- include('header') -%>
    <div class="box" id='heading'>
        <h1> <%= listTitle %> </h1>
    </div>
    <div class="box">
        <% for(var i=0;i<newTasks.length; i++){ %>
          <div class="item">
            <input type="checkbox">
            <p><%= newTasks[i] %></p>
          </div>
        <% } %>

        <form action="/" method="post">
          <input type="text" name="newtasks" placeholder="Task">
          <button type="submit" name="list" value = <%= listTitle %> >+</button>
        </form>
    </div>
